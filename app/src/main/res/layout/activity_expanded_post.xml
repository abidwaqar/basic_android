<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpandedPostActivity">

    <ImageView
        android:id="@+id/expanded_post_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/expanded_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expanded_post_thumbnail"
        android:text="hello world"
        android:textSize="32dp"/>

    <TextView
        android:id="@+id/expanded_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expanded_post_title"
        android:text="hello world"
        android:textSize="20dp"/>

</RelativeLayout>